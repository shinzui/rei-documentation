{
	"$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
	"files": {
		"includes": ["**", "!node_modules", "!dist", "!.git"]
	},
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80,
		"formatWithErrors": false,
		"lineEnding": "lf",
		"includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on"
				}
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}
